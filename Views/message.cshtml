@using System;
@using System.Collections.Generic;
@using System.Net.NetworkInformation;
@model List<Tuple<PingReply[], DateTime>>;
<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body style="font-family: Arial, Helvetica, sans-serif;">
    <table style="width: 100%; padding: 2%; text-align: center;">
        <thead>
            <tr>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    Estado
                </th>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    IP
                </th>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    Status
                </th>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    Activo
                </th>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    Tiempo de respuesta
                </th>
                <th style="border: 1px solid #0A0A0A; padding: 1.5%;">
                    Tiempo de envio del ping
                </th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
                {
                    @foreach (PingReply ping in Model[i].Item1)
                    {
                        <tr>
                            @switch (i + 1)
                            {
                                case 1:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Aguascalientes
                                    </td>
                                    break;
                                case 2:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Baja california Norte
                                    </td>
                                    break;
                                case 3:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Baja california Sur
                                    </td>
                                    break;
                                case 4:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Campeche
                                    </td>
                                    break;
                                case 5:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Chiapas
                                    </td>
                                    break;
                                case 6:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Chihuahua
                                    </td>
                                    break;
                                case 7:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Coahuila
                                    </td>
                                    break;
                                case 8:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Colima
                                    </td>
                                    break;
                                case 9:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Ciudad de Mexico
                                    </td>
                                    break;
                                case 10:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Durango
                                    </td>
                                    break;
                                case 11:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Estado de méxico
                                    </td>
                                    break;
                                case 12:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Guanajuato
                                    </td>
                                    break;
                                case 13:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Guerrero
                                    </td>
                                    break;
                                case 14:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Hidalgo
                                    </td>
                                    break;
                                case 15:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Jalisco
                                    </td>
                                    break;
                                case 16:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Michoacan
                                    </td>
                                    break;
                                case 17:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Morelos
                                    </td>
                                    break;
                                case 18:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Nayarit
                                    </td>
                                    break;
                                case 19:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Nuevo Leon
                                    </td>
                                    break;
                                case 20:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Oaxaca
                                    </td>
                                    break;
                                case 21:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Puebla
                                    </td>
                                    break;
                                case 22:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Quintana Roo
                                    </td>
                                    break;
                                case 23:
                                    <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                        Queretaro
                                    </td>
                                    break;
                            }
                            <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                @ping.Address
                            </td>
                            <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                @ping.Status
                            </td>
                            <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                @(ping.Status == IPStatus.Success ? "Verdadero" : "Falso")
                            </td>
                            <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                @($"{ping.RoundtripTime}ms")
                            </td>
                            <td style="border: 1px solid #0A0A0A; padding: 1.5%;">
                                @Model[i].Item2.ToString("dd/MM/yyyy HH:mm:ss")
                            </td>
                        </tr>
                    }
            }
        </tbody>

    </table>
</body>

</html>